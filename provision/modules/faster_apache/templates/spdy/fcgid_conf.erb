LoadModule fcgid_module modules/mod_fcgid.so
<IfModule fcgid_module>
    FcgidIPCDir /tmp/fcgidsock
    FcgidFixPathinfo 1
    FcgidMaxRequestLen 2000000

    AddHandler fcgid-script .php
    Options +ExecCGI
    FcgidWrapper /usr/bin/php-cgi .php

    <FilesMatch \.php$>
        Options +ExecCGI
    </FilesMatch>

    DirectoryIndex index.php
</IfModule>