commands:
  01updateComposer:
    command: export COMPOSER_HOME=/root && /usr/bin/composer.phar self-update
  02updateComposer:
    command: export COMPOSER_HOME=/root && /usr/bin/composer.phar update --no-dev --quiet --optimize-autoloader

option_settings:
  - namespace: aws:elasticbeanstalk:application:environment
    "option_name": COMPOSER_HOME
    value: /root