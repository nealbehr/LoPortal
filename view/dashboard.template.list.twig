<header class="page-title">
    <h1>[[title.header]]</h1>
    <button set-tooltip
            type="button"
            class="btn btn-link btn-info-link"
            data-placement="right"
            data-content="[[title.infoText]]"><i class="fa fa-2x fa-info-circle"></i></button>
</header>
<div class="panel panel-default"
     ng-repeat="category in categories"
     ng-if="templates[category.id].length > 0 && category.user_name !== null">
    <div class="panel-heading">
        <strong class="panel-title">
            <a data-toggle="collapse"
               href="#category-[[category.id]]"
               aria-controls="category-[[category.id]]">
                <span class="arrow"></span>[[category.user_name]]:
                <span class="badge">[[templates[category.id].length]]</span>
            </a>
        </strong>
    </div>
    <div id="category-[[category.id]]" class="panel-collapse collapse in">
        <div class="row thumbnails">
            <div ng-repeat="template in templates[category.id]"
                 set-max-height=".collatera-text-box"
                 class="col-sm-4 col-lg-3">
                <div class="thumbnail">
                    <div class="thumb-holder">
                        <img ng-src="[[template.preview_picture]]" alt="[[template.name]]">
                    </div>
                    <div class="collatera-text-box">
                        <div class="caption">
                            [[template.name]]
                        </div>
                        <div class="description">
                            [[template.description]]
                        </div>
                    </div>
                    <div class="item-control">
                        <a target="_blank" href="/request/document/[[template.id]]/download">
                            <i class="fa fa-download"><span>Download</span></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
