<div class="panel-group queue">
    <div class="panel panel-default"
         ng-repeat="category in categories"
         ng-if="templates[category.id].length > 0">
        <div class="panel-heading">
            <strong class="panel-title">
                <a data-toggle="collapse"
                   href="#category-[[category.id]]"
                   aria-controls="category-[[category.id]]">
                    <span class="arrow"></span>[[category.admin_name]]:
                    <span class="badge">[[templates[category.id].length]]</span>
                </a>
            </strong>
        </div>
        <div id="category-[[category.id]]" class="panel-collapse collapse in">
            <div class="row thumbnails">
                <div class="col-sm-4 col-lg-3" ng-repeat="template in templates[category.id]">
                    <div class="thumbnail">
                        <div class="thumb-holder">
                            <img ng-src="[[template.picture]]" width="263" height="258" alt="[[template.name]]">
                        </div>
                        <div class="caption">
                            [[template.name]]
                        </div>
                        <div class="description">
                            [[template.description]]
                        </div>
                        <div class="item-control">
                            <a target="_blank" href="[[PATH]]/[[template.id]]/download">
                                <i class="fa fa-download"><span>Download</span></i>
                            </a>
                            <a href="/#[[PATH]]/[[template.id]]/edit">
                                <i class="fa fa-pencil"><span>Edit</span></i>
                            </a>
                            <a ng-if="template.archives == '0'" ng-click="archives($event, $index, template.id)" href="#">
                                <i class="fa fa-archive"><span>Archives</span></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
