            </div>

            <button class="btn btn-default btn-lg">Save</button>
            <div class="bottom-nav">
                <a ng-if="lender.id" ng-href="#" ng-click="delete($event)" class="delete pull-right">Delete lender</a>
                <a ng-href="/#/" ng-click="cancel($event)" class="back">Cancel</a>
            </div>
        </div>
    </div>
</form>

    <div class="modal fade" id="al" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">close</button>
                <h4 class="modal-title">Apply Disclosure</h4>
                <strong class="modal-subtitle">Mortgage Service Professionals</strong>
              </div>
              <div class="modal-body">
                <div class="modal-box">
                    <span class="label-controls">Lender disclosure applies to: LA</span>
                    <textarea cols="30" rows="3" class="form-control"></textarea>
                </div>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-default btn-lg">Save</button>
                <a href="#" class="delete">Delete</a>
              </div>
            </div>
        </div>
    </div>